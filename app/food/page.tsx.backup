          <div className="flex items-center gap-3 mb-2">
            <h3 className="font-playfair text-lg lg:text-xl font-semibold text-foreground group-hover:text-accent transition-colors duration-300">
              {item.name}
            </h3>
            {item.tags && item.tags.length > 0 && (
              <div className="flex flex-wrap gap-2">
                {item.tags.map((tag) => (
                  <Badge key={tag}>{tag}</Badge>
                ))}
              </div>
            )}
          </div>
          {item.description && (
            <p className="font-inter text-sm text-muted-foreground leading-relaxed">
              {item.description}
            </p>
          )}
        </div>
        {item.price && (
          <div className="flex-shrink-0">
            <span className="font-playfair text-lg lg:text-xl font-semibold text-accent">
              {item.price}
            </span>
          </div>
        )}
